{
  "name": "portfolio",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "next dev --turbopack",
    "dev:mock": "MOCKS_ENABLED=true next dev --turbopack",
    "build": "next build",
    "start": "next start",
    "check": "biome check . && tsc --noEmit",
    "check:fix": "biome check --write .",
    "test": "vitest",
    "test:e2e": "playwright test",
    "prepare": "husky",
    "_contentful:generate": "graphql-codegen --config codegen.ts",
    "_supabase:generate": "supabase gen types typescript --project-id $(basename $SUPABASE_URL | cut -d'.' -f1) --schema public > app/lib/supabase/generated/database.types.ts",
    "types:generate": "dotenv -e .env.local -- sh -c 'npm run _contentful:generate && npm run _supabase:generate'"
  },
  "dependencies": {
    "@hookform/resolvers": "^5.1.1",
    "@react-email/components": "^0.0.41",
    "@supabase/ssr": "^0.6.1",
    "@vercel/analytics": "^1.5.0",
    "@vercel/speed-insights": "^1.2.0",
    "embla-carousel-react": "^8.6.0",
    "graphql": "^16.11.0",
    "hugeicons-react": "^0.3.0",
    "motion": "^12.18.1",
    "next": "^15.3.3",
    "next-intl": "^4.1.0",
    "next-themes": "^0.4.6",
    "nodemailer": "^7.0.3",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "react-hook-form": "^7.57.0",
    "zod": "^3.25.51"
  },
  "devDependencies": {
    "@axe-core/playwright": "^4.10.2",
    "@biomejs/biome": "1.9.4",
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@graphql-codegen/cli": "^5.0.6",
    "@graphql-codegen/introspection": "^4.0.3",
    "@graphql-codegen/typescript-graphql-request": "^6.3.0",
    "@playwright/test": "^1.53.0",
    "@tailwindcss/postcss": "^4.1.10",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/node": "^24.0.1",
    "@types/nodemailer": "^6.4.17",
    "@types/react": "^19.1.8",
    "@types/react-dom": "^19.1.6",
    "@vitejs/plugin-react": "^4.5.2",
    "@vitest/coverage-v8": "^3.2.3",
    "dotenv-cli": "^8.0.0",
    "happy-dom": "^18.0.1",
    "husky": "^9.1.7",
    "msw": "^2.9.0",
    "supabase": "^2.24.3",
    "tailwindcss": "^4.1.10",
    "typescript": "^5",
    "vite-tsconfig-paths": "^5.1.4",
    "vitest": "^3.2.3"
  }
}
