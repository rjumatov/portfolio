{
  "name": "portfolio",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "next dev --turbopack",
    "dev:mock": "MOCKS_ENABLED=true next dev --turbopack",
    "build": "next build",
    "start": "next start",
    "check": "biome check . && tsc --noEmit",
    "check:fix": "biome check --write .",
    "test": "vitest",
    "test:e2e": "playwright test",
    "prepare": "husky",
    "_contentful:generate": "graphql-codegen --config codegen.ts",
    "_supabase:generate": "supabase gen types typescript --project-id $(basename $SUPABASE_URL | cut -d'.' -f1) --schema public > app/lib/supabase/generated/database.types.ts",
    "types:generate": "dotenv -e .env.local -- sh -c 'npm run _contentful:generate && npm run _supabase:generate'"
  },
  "dependencies": {
    "@hookform/resolvers": "^5.2.2",
    "@react-email/components": "^1.0.1",
    "@supabase/ssr": "^0.8.0",
    "@vercel/analytics": "^1.6.1",
    "@vercel/speed-insights": "^1.3.1",
    "embla-carousel-react": "^8.6.0",
    "graphql": "^16.12.0",
    "hugeicons-react": "^0.3.0",
    "motion": "^12.23.25",
    "next": "^16.0.7",
    "next-intl": "^4.5.8",
    "next-themes": "^0.4.6",
    "nodemailer": "^7.0.11",
    "react": "^19.2.1",
    "react-dom": "^19.2.1",
    "react-hook-form": "^7.67.0",
    "zod": "^4.1.13"
  },
  "devDependencies": {
    "@axe-core/playwright": "^4.11.0",
    "@biomejs/biome": "2.3.8",
    "@commitlint/cli": "^20.1.0",
    "@commitlint/config-conventional": "^20.0.0",
    "@graphql-codegen/cli": "^6.1.0",
    "@graphql-codegen/introspection": "^5.0.0",
    "@graphql-codegen/typescript-graphql-request": "^6.3.0",
    "@playwright/test": "^1.57.0",
    "@tailwindcss/postcss": "^4.1.17",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/node": "^24.10.1",
    "@types/nodemailer": "^7.0.4",
    "@types/react": "^19.2.7",
    "@types/react-dom": "^19.2.3",
    "@vitejs/plugin-react": "^5.1.1",
    "@vitest/coverage-v8": "^4.0.15",
    "dotenv-cli": "^11.0.0",
    "happy-dom": "^20.0.11",
    "husky": "^9.1.7",
    "msw": "^2.12.3",
    "supabase": "^2.65.3",
    "tailwindcss": "^4.1.17",
    "typescript": "^5.9.3",
    "vite-tsconfig-paths": "^5.1.4",
    "vitest": "^4.0.10"
  }
}
